# ============================================
# PokerVOD Environment Configuration
# Copy to .env and configure for your environment
# ============================================

# ============ Database ============
POSTGRES_USER=pokervod
POSTGRES_PASSWORD=pokervod
POSTGRES_DB=pokervod
POSTGRES_PORT=5435

# ============ Backend ============
BACKEND_PORT=8004
DEBUG=false
LOG_LEVEL=INFO
DATABASE_URL=postgresql+asyncpg://pokervod:pokervod@postgres:5432/pokervod

# ============ Frontend ============
FRONTEND_PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:8004

# ============ NAS Configuration ============
NAS_HOST=10.10.100.122
NAS_SHARE=docker
NAS_BASE_PATH=GGPNAs
NAS_USERNAME=GGP
NAS_PASSWORD=your_nas_password_here
NAS_PORT=445
NAS_TIMEOUT=30

# ============ Google Sheets (Optional) ============
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GOOGLE_SHEET_ID=your_sheet_id
